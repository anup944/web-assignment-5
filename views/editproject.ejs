<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit <%= project.title %></title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('partials/navbar', { page: '' }) %>

  <div class="container mx-auto p-4">
    <div class="hero bg-base-200 min-h-[250px] my-8 rounded-lg shadow-lg">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold text-primary">Edit <%= project.title %></h1>
          <p class="py-4 text-lg">Update the project details below</p>
        </div>
      </div>
    </div>

    <div class="card bg-base-100 shadow-xl p-6 rounded-lg">
      <form action="/solutions/editProject" method="POST">
        <input type="hidden" name="id" value="<%= project.id %>">

        <div class="form-control">
          <label class="label">
            <span class="label-text">Title</span>
          </label>
          <input type="text" name="title" required class="input input-bordered" value="<%= project.title %>">
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text">Feature Image URL</span>
          </label>
          <input type="url" name="feature_img_url" required class="input input-bordered" value="<%= project.feature_img_url %>">
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text">Sector</span>
          </label>
          <select name="sector_id" required class="select select-bordered">
            <% sectors.forEach(sector => { %>
              <option value="<%= sector.id %>" <%= (project.sector_id == sector.id) ? "selected" : "" %>>
                <%= sector.sector_name %>
              </option>
            <% }) %>
          </select>
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text">Short Introduction</span>
          </label>
          <textarea name="intro_short" required class="textarea textarea-bordered h-24"><%= project.intro_short %></textarea>
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text">Short Summary</span>
          </label>
          <textarea name="summary_short" required class="textarea textarea-bordered h-24"><%= project.summary_short %></textarea>
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text">Impact</span>
          </label>
          <textarea name="impact" required class="textarea textarea-bordered h-24"><%= project.impact %></textarea>
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text">Original Source URL</span>
          </label>
          <input type="url" name="original_source_url" required class="input input-bordered" value="<%= project.original_source_url %>">
        </div>

        <div class="flex gap-4 mt-6">
          <button type="submit" class="btn btn-success flex-1">Update Project</button>
          <a href="/solutions/deleteProject/<%= project.id %>" class="btn btn-error flex-1">Delete Project</a>
        </div>
      </form>
    </div>
  </div>
</body>
</html>